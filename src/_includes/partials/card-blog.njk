<custom-card clickable>
  <slot name="image">
    {% if item.data.image %}
      <img 
        class="item-image" 
        src="{{ item.image | url }}" 
        alt="{{ item.alt }}"
        {% if loop.index <= 2 %} loading="eager" {% else %} loading="lazy" {% endif %}>
      {% endif %}
  <h2 slot="headline">
    <a href="{{ item.url | url }}">{{ item.data.title }}</a>
  </h2>
  <span slot="date"> {% include "partials/date.njk" %} </span>
  {%
    if
    item.data.tags.length > 1
  %}
    <div slot="tag" webc:nokeep>
      {% for tag in item.data.tags %}
        {% if tag != "posts" %}
          <span class="button" data-small-button>{{ tag }}</span>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
  <div slot="content" webc:nokeep>{{ item.data.description | markdownFormat | safe }}</div>
</custom-card>

{% css "local" %}
  {% include "css/custom-card.css" %}
{% endcss %}
